<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_dogus_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-16dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/dogusetiketlogotransparent" />

    <ImageView
        android:id="@+id/imgMainMenuTopRight"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loginscreen_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgViewMainMenuBottomLeft"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="-100dp"
        android:src="@drawable/loginscreen_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmployee"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="250dp"
        android:text="Çalışan Girişi"
        android:textAllCaps="false"
        app:backgroundTint="@color/dogus_burgundy"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdmin"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="Yönetici Girişi"
        android:textAllCaps="false"
        app:backgroundTint="@color/dogus_burgundy"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmployee"
        app:strokeColor="@color/black" />

    <TextView
        android:id="@+id/txtMainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Doğuş Etiket ve Ambalaj"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMainInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:text="Dilek ve Şikayet Uygulamasına Hoşgeldiniz."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMainInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>